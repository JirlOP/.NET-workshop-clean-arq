@if (IsLoading)
{
    <div class="spinner-border text-primary" role="status" id="loading-spinner">
        <span class="sr-only">Loading...</span>
    </div>
}
else
{
    @ChildContent
}

@code {
    [Parameter]
    public bool IsLoading { get; set; } = false;

    [Parameter]
    public RenderFragment? ChildContent { get; set; } = null!;
}
